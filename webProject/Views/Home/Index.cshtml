@{
    ViewBag.Title = "Home Page";
}

<link href="/Content/Stylesheets/style.css" rel="stylesheet" />

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div id="carousel" class="carousel-inner">
        <div class="carousel-item active" style="display: flex;justify-content: center;">
            <img class="d-block w-100" src="~/Content/Images/carousel.jpg" alt="Primeiro Slide" style="width:850px; height:490px;">
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Próximo</span>
    </a>
</div>

<div class="container">
    <div class="row" id="cards">
        <div class="col">
            <div class="card">
                <img class="card-img-top img-rounded" src="~/Content/Images/linguagens.png" alt="Imagem de capa do card" style="width:250px; height:250px;">
                <div class="card-body">
                    <h5 class="card-title">Cursos Disponíveis</h5>
                    <p class="card-text"></p>
                    <a href="/Cursos" class="btn btn-primary">Listar</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <img class="imagemCard card-img-top img-rounded" src="~/Content/Images/alunosCadastrados.jpg" alt="Imagem de capa do card" style="width:250px; height:250px;">
                <div class="card-body">
                    <h5 class="card-title">Alunos Cadastrados</h5>
                    <p class="card-text"></p>
                    <a href="/Alunos" class="btn btn-primary">Listar</a>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card">
                <img class="card-img-top img-rounded" src="~/Content/Images/matricula.jpg" alt="Imagem de capa do card" style="width:250px; height:250px;">
                <div class="card-body">
                    <h5 class="card-title">Matrículas</h5>
                    <p class="card-text"></p>
                    <a href="/Matriculas" class="btn btn-primary">Listar</a>
                </div>
            </div>
        </div>
    </div>
</div>

