@model IEnumerable<classProject.Models.Matricula>

@{
    ViewBag.Title = "Matrículas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Matrículas</h2>

<p>
    @Html.ActionLink("Nova Matricula", "Cadastrar")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Aluno.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Curso.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataMatricula)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Aluno.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Curso.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DataMatricula)
        </td>
        <td>
            @Html.ActionLink("Editar", "Editar", new { id = item.MatriculaID }) |
            @Html.ActionLink("Deletar", "Deletar", new { id = item.MatriculaID }, new { onclick = "return confirm('Deseja excluir essa matricula?');" })
        </td>
    </tr>
}

</table>
